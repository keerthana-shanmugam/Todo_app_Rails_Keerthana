<table class = "border">
`
<tr class = "border_1">
<th>Task</th>
<th>Date</th>
<th>Status</th>
<th>Delete</th>
</tr>

<% Todo.all.each do |todo|%>

<tr class = "border_2">
<td><%=todo.task%></td>
<td><%= todo.date%></td>

<% if todo.status == false || todo.status == 'null' %>
    <td><a href="/todos/update/ <%= todo.id%>"><button class="status_before_complete">Mark as Complete</button></a></td>
<% else %>
     <td><button class="status_after_complete" >Completed</button></td>
<% end %>

<td >
<%= form_with(url: "/delete/#{todo.id}", class: "TodoItem-delete", method: "delete") do %>
<%= submit_tag "Delete", class: "TodoItem-trashIcon"%>
<% end %>
</td>
</tr>
<%end%>
</table>